@using MvcPL.Infrastructure.Helpers
@model MvcPL.Models.ViewModels.UserViewModel
@{
    ViewBag.Title = "Edit user";
}
<h2>@ViewBag.Title</h2>
<h5>@Html.ActionLink("Back to users", "UsersEdit")</h5>
<hr />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="col-md-7 form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.User.Id)
            <div class="form-group">
                <div class="col-md-3">
                    @Html.LabelFor(model => model.Profile.FirstName, new { @class = "control-label" })
                </div>
                <div class="col-md-9">
                    @Html.EditorFor(model => model.Profile.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Profile.FirstName, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-3">
                    @Html.LabelFor(model => model.Profile.LastName, new { @class = "control-label" })
                </div>
                <div class="col-md-9">
                    @Html.EditorFor(model => model.Profile.LastName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Profile.LastName, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-3">
                    @Html.LabelFor(model => model.Profile.DateOfBirth, new { @class = "control-label" })
                </div>
                <div class="col-md-9">
                    @Html.EditorFor(model => model.Profile.DateOfBirth, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Profile.DateOfBirth, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save changes" class="btn btn-default" />
                </div>
            </div>
        </div>
        <div class="col-md-5">
            <div class="form-group">
                @Html.OutputUserAvatar(Model.Profile.UserPhoto)
            </div>
        </div>
    </div>
}

